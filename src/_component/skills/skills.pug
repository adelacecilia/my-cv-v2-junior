- var sectionTitle =data.skills.sectionTitle;
include ../section-title/section-title

.column(span="row")
  h3.about-me__lead-title=data.skills.legend.title
.column(span="row")
  ul.skills__list
    each item, key in data.skills.legend.itemList
      li.skills__item
        span.skills__icon(class=`icon__${item.icon}`)
        span.skills__label=item.label 
        spam.skills__count=key + 1
each skillType in data.skills.skillTypeList
  .column(span="row")
    h3.about-me__lead-title=skillType.type
  .column(span="row")
    each skill in skillType.skillList
      span(class=`skills__new--${skill.type}`
      )=skill.label
.column(span="row")
  .description-box__with-shadow
    p.descriere=data.skills.description 
.column(span="row")
  button.buton__disc-dolarel
    i.icon__arrow-down
.column(span="row" height="10")